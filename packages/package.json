{
  "name": "packages",
  "version": "1.0.0",
  "scripts": {
    "build": "TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register -r tsconfig-paths/register scripts/build.ts",
    "publish": "rocket-punch publish",
    "start": "HTTPS=true SSL_CRT_FILE=$LOCALHOST_HTTPS_CERT SSL_KEY_FILE=$LOCALHOST_HTTPS_KEY PORT=9221 react-scripts start",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --coverage",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true react-scripts test --colors --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": [
      "../.eslintrc.js"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "browserslist": {
    "production": [
      "chrome > 60",
      "firefox > 60",
      "safari > 12"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@terra-dev/web-connector-controller": "^0.7.0",
    "@terra-dev/web-connector-interface": "^0.7.0",
    "@terra-money/terra.js": "^2.0.1",
    "@walletconnect/core": "^1.6.1",
    "@walletconnect/iso-crypto": "^1.6.1",
    "@walletconnect/types": "^1.6.1",
    "@walletconnect/utils": "^1.6.1",
    "bowser": "^2.11.0",
    "fast-deep-equal": "^3.1.3",
    "mobile-detect": "^1.4.5",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "rxjs": "^7.3.0",
    "styled-components": "^5.3.0",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "@sentry/browser": "^6.11.0",
    "@sentry/tracing": "^6.11.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^26.0.24",
    "@types/puppeteer": "^5.4.4",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.12",
    "@types/webpack-env": "^1.16.2",
    "cross-env": "^7.0.3",
    "lint-staged": "^11.1.2",
    "puppeteer": "^10.2.0",
    "react-scripts": "4.0.3",
    "rocket-punch": "^3.0.1",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "web-vitals": "^2.1.0"
  }
}
